<Window x:Class="Laba3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assassins Creed Database App" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="gamesDataGrid" AutoGenerateColumns="False" HorizontalAlignment="Left" VerticalAlignment="Top" Height="200" Width="780" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding TITLE}"/>
                <DataGridTextColumn Header="RealeseDate" Binding="{Binding RELESEDATE}"/>
                <DataGridTextColumn Header="Platforms" Binding="{Binding PLATFORMS}"/>
                <DataGridTextColumn Header="Rating" Binding="{Binding RATING}"/>
                <DataGridTextColumn Header="Description" Binding="{Binding DESCRIPTIONn}"/>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid x:Name="charactersDataGrid" AutoGenerateColumns="False" HorizontalAlignment="Left" VerticalAlignment="Top" Height="200" Width="780" Margin="10,230,10,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Character" Binding="{Binding NAMe}"/>
                <DataGridTextColumn Header="Game" Binding="{Binding GAMES}"/>
                <DataGridTextColumn Header="Description" Binding="{Binding DESCRIPTIONSn}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
